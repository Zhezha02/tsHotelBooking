{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["es6"],
    // "allowJs": true,

    "outDir": "./build",
    "rootDir": "./",

    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",

    "resolveJsonModule": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", ".eslintrc.js"]
}
